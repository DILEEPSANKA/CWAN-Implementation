{
    "template_name": "signup",
    "head": {
      "meta_charset": "UTF-8",
      "meta_viewport": "width=device-width, initial-scale=1.0",
      "title": "Signup Page",
      "custom_css": "css/sign_up.css"
    },
    "body": {
      "container": {
        "form_container": {
          "heading": "Signup",
          "error_message_id": "error_message",
          "form": {
            "id": "signupForm",
            "method": "POST",
            "action": "/signup",
            "fields": [
              {
                "label": "Username:",
                "type": "text",
                "id": "username",
                "name": "username",
                "value": "{{ username | default('') }}",
                "required": true,
                "error_id": "usernameError"
              },
              {
                "label": "Email ID:",
                "type": "email",
                "id": "email",
                "name": "email",
                "value": "{{ email | default('') }}",
                "required": true,
                "error_id": "emailError"
              },
              {
                "label": "Password:",
                "type": "password",
                "id": "password",
                "name": "password",
                "required": true,
                "error_id": "passwordError"
              },
              {
                "label": "Confirm Password:",
                "type": "password",
                "id": "confirm-password",
                "name": "confirm",
                "required": true,
                "error_id": "confirmPasswordError"
              }
            ],
            "checkbox": {
              "id": "terms",
              "name": "terms",
              "required": true,
              "label": "By creating an account, you agree to our",
              "link_href": "terms-and-conditions.html",
              "link_text": "Terms & Conditions"
            },
            "submit_button": {
              "text": "Create Account"
            },
            "login_link": {
              "text": "Already have an account?",
              "link_href": "/login",
              "link_text": "Login"
            }
          }
        }
      }
    },
    "styles": {
      "body": {
        "font-family": "Arial, sans-serif",
        "display": "flex",
        "justify-content": "center",
        "align-items": "center",
        "min-height": "100vh",
        "margin": "0",
        "background-image": "linear-gradient(135deg, #fef9d7 10%, #78c3e0 100%)"
      },
      ".container": {
        "display": "flex",
        "justify-content": "center",
        "align-items": "center",
        "max-width": "500px",
        "width": "100%",
        "border-radius": "10px",
        "overflow": "hidden",
        "border": "1px solid #ddd"
      },
      ".form-container": {
        "padding": "40px",
        "width": "100%",
        "display": "flex",
        "flex-direction": "column",
        "justify-content": "center",
        "box-sizing": "border-box",
        "background-image": "linear-gradient(135deg, #d1884d 10%, #fbed96 100%)"
      },
      ".form-container h2": {
        "margin-bottom": "20px",
        "font-size": "24px",
        "color": "#333",
        "text-align": "center"
      },
      ".form-container label": {
        "margin-bottom": "5px",
        "color": "#555"
      },
      ".form-container input": {
        "padding": "10px",
        "margin-bottom": "15px",
        "border": "1px solid #ccc",
        "border-radius": "5px",
        "font-size": "16px",
        "width": "100%"
      },
      ".form-container input[type='checkbox']": {
        "width": "auto",
        "margin-right": "10px"
      },
      ".form-container button": {
        "padding": "12px 20px",
        "background-color": "#2864d3",
        "color": "white",
        "border": "none",
        "border-radius": "5px",
        "font-size": "18px",
        "cursor": "pointer",
        "margin": "20px auto 10px auto",
        "display": "block",
        "transition": "background-color 0.3s ease"
      },
      ".form-container button:hover": {
        "background-color": "#4c81ff"
      },
      ".form-container .login-link": {
        "margin-top": "15px",
        "text-align": "center"
      },
      ".form-container .login-link a": {
        "color": "#4c81ff",
        "text-decoration": "none",
        "font-size": "16px"
      },
      ".form-container .login-link a:hover": {
        "text-decoration": "underline"
      },
      ".error": {
        "color": "red",
        "font-size": "14px"
      },
      ".form-container a": {
        "color": "#4c81ff",
        "text-decoration": "none",
        "font-weight": "bold"
      },
      ".form-container a:hover": {
        "text-decoration": "underline"
      }
    }
  }
  